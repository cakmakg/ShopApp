generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "postgresql"
  url      = env("DATABASE_URL")
}

// ═══════════════════════════════════════════════════════════
// TENANT MANAGEMENT
// ═══════════════════════════════════════════════════════════

model Tenant {
  id              String    @id @default(cuid())
  
  businessName    String
  email           String    @unique
  phone           String?
  
  blueprintId     String    // 'ecommerce', 'jewelry', etc.
  
  subdomain       String    @unique
  customDomain    String?   @unique
  domainVerified  Boolean   @default(false)
  
  settings        String    @default("{}")
  theme           String    @default("{}")
  
  status          TenantStatus @default(TRIAL)
  
  createdAt       DateTime  @default(now())
  updatedAt       DateTime  @updatedAt
  
  users           User[]
  products        Product[]
  orders          Order[]
  domains         Domain[]
  subscription    Subscription?

  @@index([subdomain])
}

enum TenantStatus {
  TRIAL
  ACTIVE
  SUSPENDED
  CANCELLED
}

// ═══════════════════════════════════════════════════════════
// DOMAIN MANAGEMENT
// ═══════════════════════════════════════════════════════════

model Domain {
  id              String       @id @default(cuid())
  tenantId        String
  tenant          Tenant       @relation(fields: [tenantId], references: [id], onDelete: Cascade)
  
  domain          String       @unique
  isPrimary       Boolean      @default(false)
  verified        Boolean      @default(false)
  
  createdAt       DateTime     @default(now())
  updatedAt       DateTime     @updatedAt
  
  @@index([tenantId])
}

// ═══════════════════════════════════════════════════════════
// SUBSCRIPTION
// ═══════════════════════════════════════════════════════════

model Subscription {
  id              String    @id @default(cuid())
  tenantId        String    @unique
  tenant          Tenant    @relation(fields: [tenantId], references: [id])
  
  planId          String
  status          String    // active, past_due
  
  createdAt       DateTime  @default(now())
  updatedAt       DateTime  @updatedAt
}

// ═══════════════════════════════════════════════════════════
// USER AUTH
// ═══════════════════════════════════════════════════════════

// NextAuth Models
model Account {
  id                String  @id @default(cuid())
  userId            String
  type              String
  provider          String
  providerAccountId String
  refresh_token     String?
  access_token      String?
  expires_at        Int?
  token_type        String?
  scope             String?
  id_token          String?
  session_state     String?

  user User @relation(fields: [userId], references: [id], onDelete: Cascade)

  @@unique([provider, providerAccountId])
}

model Session {
  id           String   @id @default(cuid())
  sessionToken String   @unique
  userId       String
  expires      DateTime
  user         User     @relation(fields: [userId], references: [id], onDelete: Cascade)
}

model User {
  id            String    @id @default(cuid())
  tenantId      String?
  tenant        Tenant?   @relation(fields: [tenantId], references: [id], onDelete: Cascade)
  
  name          String?
  email         String?   @unique
  emailVerified DateTime?
  image         String?
  password      String?   // For credentials provider
  role          String    @default("STAFF") // OWNER, ADMIN, STAFF, CUSTOMER
  
  accounts      Account[]
  sessions      Session[]
  
  createdAt     DateTime  @default(now())
  updatedAt     DateTime  @updatedAt
  
  @@unique([tenantId, email])
}

model VerificationToken {
  identifier String
  token      String   @unique
  expires    DateTime

  @@unique([identifier, token])
}

// ═══════════════════════════════════════════════════════════
// E-COMMERCE CORE
// ═══════════════════════════════════════════════════════════

model Product {
  id              String    @id @default(cuid())
  tenantId        String
  tenant          Tenant    @relation(fields: [tenantId], references: [id], onDelete: Cascade)
  
  name            String
  slug            String
  description     String?
  price           Float
  compareAtPrice  Float?    // Original price for showing discounts
  stock           Int       @default(0)
  sku             String?
  category        String?
  isActive        Boolean   @default(true)
  
  images          String    @default("[]")
  blueprintData   String    @default("{}") // Sector specific data
  
  createdAt       DateTime  @default(now())
  updatedAt       DateTime  @updatedAt
  
  orderItems      OrderItem[]

  @@unique([tenantId, slug])
  @@index([tenantId, isActive])
}

model Order {
  id              String    @id @default(cuid())
  tenantId        String
  tenant          Tenant    @relation(fields: [tenantId], references: [id])
  
  orderNumber     String
  status          OrderStatus @default(PENDING)
  total           Float
  
  items           OrderItem[]
  
  createdAt       DateTime  @default(now())
  updatedAt       DateTime  @updatedAt
  
  @@unique([tenantId, orderNumber])
}

model OrderItem {
  id              String    @id @default(cuid())
  orderId         String
  order           Order     @relation(fields: [orderId], references: [id])
  productId       String
  product         Product   @relation(fields: [productId], references: [id])
  
  quantity        Int
  price           Float
}

enum OrderStatus {
  PENDING
  CONFIRMED
  SHIPPED
  DELIVERED
  CANCELLED
}
